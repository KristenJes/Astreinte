{% extends 'base.html.twig' %}

{% block title %}Astreintes{% endblock %}

{% block body %}
<script>
window.onload = function(){
    $(".change-year").hover(function(){
        $(this).removeClass("far").addClass("fas");
    },
    function(){
        $(this).removeClass("fas").addClass("far");
    })
}
</script>

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <div class="title">
                <h2>{{ week.getDate() | date('Y') }}</h2>
                <p>du {{ week.getMondayDate() | date('d/m') }} au {{ week.getSundayDate() | date('d/m') }}</p>
            </div>
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="form-group mt-3 text-center">
                <a href="{{ path('site.astreintes', {'year': week.getDate() | date('Y')}) }}" class="btn btn-secondary mx-2">Annuler</a>
                <button class="btn btn-success mx-2">Valider</button>
            </div>
            {{ form_end(form) }}
            <div class="mt-4 text-center">
                <a href="{{ path('site.astreinte.delete', {'year': week.getDate() | date('Y'), 'week_num': week.getDate() | date('W')}) }}" class="btn btn-danger mx-2">Supprimer</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}