{% extends 'base.html.twig' %}

{% block style %}<link href="{{ asset('css/index.css') }}" rel="stylesheet">{% endblock %}
{% block title %}Accueil{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-5">
        
        <div class="image-holder">
            <div class="image-container">
                <img src="
                {% if astreinte.utilisateur.photo is null %}
                    {{  asset('images/empty.png') }}
                {% else %}
                    {{ astreinte.utilisateur.getPhoto() }}
                {% endif %}" />                
            </div>
        </div>
        
        <div class="texts">
            <h2 id="nom" class="text shdw">{{ astreinte.utilisateur.toString() }}</h2>
            <p id="numero" class="text shdw">{{ astreinte.utilisateur.SpaceNum() }}</p>   
        </div>             

        <a href="tel:{{ astreinte.utilisateur.numero }}"><i class="fas fa-phone call-icon shdw"></i></a>
        <br>
        <a href="sms:{{ astreinte.utilisateur.numero }}"><i class="far fa-comment-dots call-icon shdw"></i></a>

        {% if app.user is null %}
        <div class="mt-5">
            <a href="{{ path('security.login') }}" class="btn btn-primary">Connexion</a>
        </div>              
        {% endif %}
    </div>
</div>
{% endblock %}
